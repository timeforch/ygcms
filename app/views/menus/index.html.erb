<h1>Listing menus</h1>

<table>
  <tr>
    <th>Sid</th>
    <th>Name</th>
    <th>Parent path</th>
    <th>Click url</th>
    <th>Display</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.sid %></td>
    <td><%= menu.name %></td>
    <td><%= menu.parent_path %></td>
    <td><%= menu.click_url %></td>
    <td><%= menu.display %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

